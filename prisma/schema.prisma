generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ------------------ MODELOS ------------------

model Aluno {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String       @unique
  matricula   String       @unique
  emprestimos Emprestimo[]
}

model Item {
  id          Int          @id @default(autoincrement())
  titulo      String
  autor       String
  isbn        String       @unique
  foto        String?
  resumo      String?
  tipo        String
  emprestimos Emprestimo[]
}

model Emprestimo {
  id        Int       @id @default(autoincrement())
  aluno     Aluno     @relation(fields: [alunoId], references: [id])
  alunoId   Int
  item      Item      @relation(fields: [itemId], references: [id])
  itemId    Int
  dataEmp   DateTime  @default(now())
  dataDev   DateTime?
  devolvido Boolean   @default(false)
}
